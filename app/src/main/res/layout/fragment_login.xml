<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymealsproyect.ui.view.LoginFragment">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mymealpng_logo"
        app:layout_constraintBottom_toTopOf="@id/tvFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="email"
        android:textColor="#828282"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etEmailLogin"
        app:layout_constraintStart_toStartOf="@id/etEmailLogin" />

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:background="@drawable/auth_vector"
        android:fontFamily="@font/fredoka_regular"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409"
        tools:text="pedro.arellano2001@gmail.com" />

    <View
        android:id="@+id/vUserIcon"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:layout_margin="13dp"
        android:background="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/etEmailLogin"
        app:layout_constraintEnd_toEndOf="@id/etEmailLogin"
        app:layout_constraintTop_toTopOf="@id/etEmailLogin" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_regular"
        android:text="password"
        android:textColor="#828282"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etPasswordLogin"
        app:layout_constraintStart_toStartOf="@id/tvFirstName" />

    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/auth_vector"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmailLogin"
        tools:text="asdasda" />

    <View
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_margin="13dp"
        android:background="@drawable/password_visibility_states"
        android:backgroundTint="#828282"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/etPasswordLogin"
        app:layout_constraintEnd_toEndOf="@id/etPasswordLogin"
        app:layout_constraintTop_toTopOf="@id/etPasswordLogin" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/auth_vector"
        android:backgroundTint="#0E8C47"
        android:fontFamily="@font/fredoka_regular"
        android:padding="0dp"
        android:text="login"
        android:textAllCaps="false"
        android:textColor="#DCEFE5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPasswordLogin" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredoka_medium"
        android:text="register"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>