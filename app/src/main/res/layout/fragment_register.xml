    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="password"
        android:textColor="#828282"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etPasswordRegister"
        app:layout_constraintStart_toStartOf="@id/etEmailRegister" />

    <EditText
        android:id="@+id/etPasswordRegister"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/auth_vector"
        android:fontFamily="@font/fredoka_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmailRegister"
        tools:text="pedroarellano" />

    <TextView
        android:id="@+id/tvRepeatPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/fredoka_regular"
        android:text="repeat password"
        android:textColor="#828282"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etConfirmPassword"
        app:layout_constraintStart_toStartOf="@id/etEmailRegister" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/auth_vector"
        android:fontFamily="@font/fredoka_regular"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPasswordRegister"
        tools:text="pedroarellano" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/auth_vector"
        android:backgroundTint="#0E8C47"
        android:fontFamily="@font/fredoka_regular"
        android:padding="0dp"
        android:text="register"
        android:textAllCaps="false"
        android:textColor="#DCEFE5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>